@inherits LayoutComponentBase

// This component defines the main layout for the application. 
// It includes a sidebar for navigation, a top navigation bar with links and user actions, 
// and a content area for displaying the current page's content.

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row">
            <a href="https://github.com/yourusername/reddit2" target="_blank">
                <i class="bi bi-github"></i> Source
            </a>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">
                <i class="bi bi-book"></i> Documentation
            </a>
            <AuthorizeView>
                <Authorized>
                    <a href="/Account/Manage">
                        <i class="bi bi-person-circle"></i> @context.User.Identity?.Name
                    </a>
                </Authorized>
                <NotAuthorized>
                    <a href="/Account/Login">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In
                    </a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<HeadContent>
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="css/app.css" rel="stylesheet" />
</HeadContent>