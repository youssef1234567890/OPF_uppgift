@* Inherits from LayoutComponentBase to act as the main layout for the app *@
@inherits LayoutComponentBase

@* Main page container with sidebar and main content area *@
<div class="page">
    @* Sidebar container: displays the navigation menu *@
    <div class="sidebar">
        <NavMenu />
    </div>

    @* Main area containing the top row and page content *@
    <main>
        @* Top row: includes a link to the About page *@
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        @* Article: placeholder for rendering the body content of pages *@
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@* Blazor error UI: displays unhandled error messages with options to reload or dismiss *@
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
