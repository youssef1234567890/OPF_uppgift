@inject NavigationManager NavigationManager

<div class="navbar" style="background-color: #28a745; padding: 1rem; text-align: center;">
    <h1 style="color: white; margin: 0;">My Web Blazor App</h1>

    
</div>

<div style="display: flex; justify-content: space-between; padding: 2rem;">
    <button style="flex: 1; margin-right: 1rem; padding: 2rem; font-size: 1.5rem; background-color: #007bff; color: white; border: none; border-radius: 10px; cursor: pointer;"
            @onclick="@(() => NavigationManager.NavigateTo("Account/Register"))">
        Register
    </button>

    <button style="flex: 1; margin-left: 1rem; padding: 2rem; font-size: 1.5rem; background-color: #ffc107; color: white; border: none; border-radius: 10px; cursor: pointer;"
            @onclick="@(() => NavigationManager.NavigateTo("Account/Login"))">
        Login
    </button>
</div>

