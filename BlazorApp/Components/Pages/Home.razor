@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Welcome</PageTitle>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="text-center">
        <AuthorizeView>
            <Authorized>
                <h1 class="display-4">Welcome, @context.User.Identity.Name, to Reddit 2!</h1>
            </Authorized>
            <NotAuthorized>
                <h1 class="display-4">Welcome to Reddit 2!</h1>
            </NotAuthorized>
        </AuthorizeView>
        <p class="lead">Your one-stop platform for engaging discussions and easy navigation.</p>
        <a href="/Account/Register" class="btn btn-primary btn-lg">Get Started</a>
    </div>

    <!-- How It Works Section -->
    <section class="mt-5">
        <h2 class="text-center mb-4">How to Use This Site</h2>
        <div class="row text-center">
            <div class="col-md-6">
                <div class="card p-3 shadow-sm">
                    <h3>1. Create an Account</h3>
                    <p>Register to access exclusive features like discussions and admin panels.</p>
                    <a href="/Account/Register" class="btn btn-outline-primary">Register Now</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-3 shadow-sm">
                    <h3>2. Browse Categories</h3>
                    <p>Navigate different categories to find discussions that interest you.</p>
                    <AuthorizeView>
                        <NotAuthorized>
                            <a href="/Account/Login" class="btn btn-outline-primary">Browse Categories</a>
                        </NotAuthorized>
                        <Authorized>
                            <a href="/categories" class="btn btn-outline-primary">Browse Categories</a>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Links Section -->
    <section class="mt-5 text-center">
        <h2>Quick Access</h2>
        <p>Navigate to key features instantly.</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <AuthorizeView>
                <NotAuthorized>
                    <a href="/Account/Login" class="btn btn-secondary">Login</a>
                    <a href="/Account/Login" class="btn btn-info">Manage Account</a>
                </NotAuthorized>
                <Authorized>
                    <a href="/categories" class="btn btn-info">Categories</a>
                    <a href="/Account/Manage" class="btn btn-info">Manage Account</a>
                </Authorized>
            </AuthorizeView>
            <a href="/log" class="btn btn-dark">View Logs</a>
        </div>
    </section>
</div>
